            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bancario.Controller.TelaOperacionalController">

    <children>
        <VBox spacing="20"
              alignment="CENTER"
              layoutX="150"
              layoutY="60"
              style="-fx-background-color: white;
