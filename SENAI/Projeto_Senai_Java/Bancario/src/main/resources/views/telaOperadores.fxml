                    style="-fx-background-color: #1e3c72; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>

            <Button text="Ver Extrato"
                    prefWidth="300"
                    styleClass="main-button"
                    onAction="#abrirExtrato"
                    style="-fx-background-color: #1e3c72; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>


            <Button text="Sair"
                    prefWidth="300"
                    styleClass="main-button"
