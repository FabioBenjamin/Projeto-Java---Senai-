<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane prefHeight="450.0" prefWidth="700.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bancario.Controller.TelaInicialController"
            style="-fx-background-color: linear-gradient(to bottom right, #1e3c72, #2a5298);">

    <children>

        <VBox alignment="CENTER"
              spacing="25"
              layoutX="200"
              layoutY="110"
              style="-fx-background-color: white;
                     -fx-padding: 40;
                     -fx-background-radius: 20;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 10);">

            <!-- Título -->
            <Label text="Sistema Bancário"
                   style="-fx-font-size: 30px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #1e3c72;" />

            <Label text="Bem-vindo!"
                   style="-fx-font-size: 18px;
                          -fx-text-fill: #555;" />

            <!-- Botão de entrada -->
            <Button text="Entrar"
                    prefWidth="220"
                    prefHeight="45"
                    style="-fx-background-color: #1e3c72;
                           -fx-text-fill: white;
                           -fx-font-size: 16px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 10;"
                    onAction="#telasInicias"/>

        </VBox>

    </children>
</AnchorPane>