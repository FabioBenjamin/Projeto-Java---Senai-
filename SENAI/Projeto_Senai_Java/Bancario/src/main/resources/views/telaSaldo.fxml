<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bancario.Controller.TelaOperacionalController"
            style="-fx-background-color: linear-gradient(to bottom right, #1e3c72, #2a5298);">

    <children>

        <VBox alignment="CENTER"
              spacing="20"
              layoutX="150"
              layoutY="100"
              style="-fx-background-color: white;
                     -fx-padding: 30;
                     -fx-background-radius: 15;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 15, 0, 0, 5);">

            <Label text="Consulta de Saldo"
                   style="-fx-font-size: 25px; -fx-font-weight: bold;" />

            <Label fx:id="Saldo"
                   text="Saldo: R$ 0.00"
                   style="-fx-font-size: 20px;" />

            <Button text="Voltar"
                    onAction="#telasInicias"
                    prefWidth="300"
                    style="-fx-background-color: #1e3c72; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />

        </VBox>

    </children>
</AnchorPane>